/* app.wxss - 微信小程序全局样式 */

/* 重置样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f5f7fa;
}

/* 公共样式类 */
.container {
  padding: 0 16px;
}

.section-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
  border-left: 4px solid #E60012;
  padding-left: 10px;
}

.btn-primary {
  background-color: #E60012;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 12px 24px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  background-color: #CC0010;
}

.text-red {
  color: #E60012;
}

.text-gray {
  color: #999;
}

/* 底部安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 图片懒加载 */
.image-lazy {
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-lazy.loaded {
  opacity: 1;
}